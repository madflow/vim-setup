execute pathogen#infect()
syntax on
filetype plugin indent on

set tabstop=4
set shiftwidth=4
set expandtab

set nocompatible
set autoindent
set autoread

set backspace=2

set nobackup

set history=200

set background=dark

set fileformats=unix,dos,mac

set incsearch
set laststatus=2
set lazyredraw
set linebreak

set mouse=nvi
set mousemodel=popup
set pastetoggle=<F2>
set scrolloff=1
set shiftround
set showcmd
set showmatch
set sidescrolloff=5
set smartcase
set smarttab

let g:syntastic_javascript_checkers = ['jshint'] 
